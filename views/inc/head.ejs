<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="keywords" content="japanese,game">
<meta name="description" content="ブイツ.js - Japanese Flash Card Game">
<link rel="stylesheet" href="<%- meta.css.bootstrap.href %>">
<link rel="stylesheet" href="<%- meta.css.fontawesome.href %>" integrity="<%- meta.css.fontawesome.integrity %>" crossorigin="anonymous">
<style>
  body {
    background-color: #c8c8ff;
    padding-top: 5em;
  }
</style>
<% if (data) { %>
<script type="text/javascript">
  const logoutUrl = "<%- meta.logoutUrl %>";

  function logout() {
    const xhr = new XMLHttpRequest();

    xhr.onreadystatechange = () => {
      if (xhr.readyState === 4) {
        window.location.href = JSON.parse(xhr.response);
      }
    };

    xhr.open("POST", logoutUrl, false);
    xhr.send();
  }

  // webpages r stoopid
  window.onload = () => {
    document.getElementById("logout").addEventListener("click", logout, false);
  }
</script>
<% } %>